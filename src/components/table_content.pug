mixin table()
    table(class="table table-striped")
        thead
            tr(class='text-center')
                th(scope="col") ID
                th(scope="col") First Name
                th(scope="col") Last Name
                th(scope="col") House #
                th(scope="col") Street
                th(scope="col") On/Off Water
                th(scope="col") A-lot
                th(scope="col") Area
                th(scope="col") Card Number
                th(scope="col") Card Enabled
                th(scope="col") Paid Dues
                th(scope="col") Agreement
                th(scope="col") Registration
                th(scope="col") Watercraft 1
                th(scope="col") MC 1 #
                th(scope="col") Color 1
                th(scope="col") Watercraft 2
                th(scope="col") MC 2 #
                th(scope="col") Watercraft 3
                th(scope="col") MC 3 #
                th(scope="col") Color 3
                th(scope="col") Watercraft 4
                th(scope="col") MC 4 #
                th(scope="col") Color 4
                th(scope="col") Watercraft 5
                th(scope="col") MC 5 #
                th(scope="col") Color 5
            tbody
                each resident in data
                    tr(class='text-center')
                        td= resident.ID
                        td= resident.First_Name
                        td= resident.Last_Name
                        td= resident.House_Num
                        td= resident.Street
                        td= resident.On_Off_Water
                        td= resident.A_lot
                        td= resident.Area
                        td= resident.Card_Number
                        td= resident.Card_Enabled
                        td= resident.Paid_Due
                        td= resident.Agreement
                        td= resident.Registration
                        td= resident.Watercraft_1
                        td= resident.MC_1_Num
                        td= resident.Color_1
                        td= resident.Watercraft_2
                        td= resident.MC_2_Num
                        td= resident.Color_2
                        td= resident.Watercraft_3
                        td= resident.MC_3_Num
                        td= resident.Color_3
                        td= resident.Watercraft_4
                        td= resident.MC_4_Num
                        td= resident.Color_4
                        td= resident.Watercraft_5
                        td= resident.MC_5_Num
                        td= resident.Color_5