mixin table()
    script.
        $(document).ready(function(){
            // Activate tooltip
            $('[data-toggle="tooltip"]').tooltip();
            
            // Select/Deselect checkboxes
            var checkbox = $('table tbody input[type="checkbox"]');
            $("#selectAll").click(function(){
                if(this.checked){
                    checkbox.each(function(){
                        this.checked = true;
                    });
                } else{
                    checkbox.each(function(){
                        this.checked = false;
                    });
                }
            });
            checkbox.click(function(){
                if(!this.checked){
                    $("#selectAll").prop("checked", false);
                }
            });
        });

    div(class="container-xl")
        div(class="table-responsive")
            div(class="table-wrapper")
                div(class="table-title")
                    div(class="row")
                        div(class="col-sm-6")
                            h2 Manage
                                b Residents
                                //-? // TODO: decide if i want add/delete for certain roles on this page
                        div(class="col-sm-6")
                            a(href="#addResidentModal" class="btn btn-success" data-toggle="modal")
                                i(class="material-icons") &#xE147;
                                span Add New Resident
                            a(href="#deleteResidentModal" class="btn btn-danger" data-toggle="modal")
                                i(class="material-icons") &#xE15c;
                                span Delete Resident
                table(class="table table-striped table-hover")
                    thead
                        tr(class="text-center")
                            th
                                span(class="custom-checkbox")
                                    input(type="checkbox" id="selectAll")
                                    label(for="selectAll")
                            th ID
                            th Name
                            th Address
                            th Action
                    tbody(id="myTable")
                        each boatRampData in data
                            tr(class="text-center")
                                td
                                    span(class="custom-checkbox")
                                        input(type="checkbox" id="checkbox1" name="options[]" value="1")
                                        label(for="checkbox1")
                                td= boatRampData._id
                                td= boatRampData.First_Name + " " + boatRampData.Last_Name
                                td= boatRampData.House_Num + " " + boatRampData.Street
                                td
                                    a(href="#editResidentModal" class="edit" data-toggle="modal")
                                        i(class="material-icons" data-toggle="tooltip" title="Edit") &#xE254;
                                    a(href="#deleteResidentModal" class="delete" data-toggle="modal")
                                        i(class="material-icons" data-toggle="tooltip" title="Delete") &#xE872;

    //-* // TODO: Implement pagination in later versions.

    // add modal HTML
    div(id="addResidentModal" class="modal fade")
        div(class="modal-dialog")
            div(class="modal-content")
                form(method='POST' action='')
                    div(class="modal-header")
                        h4(class="modal-title") Add Resident
                        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
                    div(class="modal-body")
                        div(class="form-group")
                            label First Name
                            input(type="text" class="form-control" required name="fName")
                        div(class="form-group")
                            label Last Name
                            input(type="text" class="form-control" required name="lName")
                        div(class="form-group")
                            label House Number
                            input(type="text" class="form-control" required name="hNum")
                        div(class="form-group")
                            label Street
                            input(type="text" class="form-control" required name="street")
                    div(class="modal-footer")
                        input(type="button" class="btn btn-default" data-dismiss="modal" value="Cancel")
                        input(type="submit" class="btn btn-success")
    // Edit Modal HTML
    div(id="editResidentModal" class="modal fade")
        div(class="modal-dialog")
            div(class="modal-content")
                form
                    div(class="modal-header")
                        h4(class="modal-title") Edit Resident
                        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
                    div(class="modal-body")
                        div(class="form-group")
                            label Name
                            input(type="text" class="form-control" required)
                        div(class="form-group")
                            label Address
                            input(type="text" class="form-control" required)
                    div(class="modal-footer")
                        input(type="button" class="btn btn-default" data-dismiss="modal" value="Cancel")
                        input(type="submit" class="btn btn-success" value="Add")
    // delete modal HTML
    div(id="deleteResidentModal" class="modal fade")
        div(class="modal-dialog")
            div(class="modal-content")
                form(method="DELETE" action="")
                    div(class="modal-header")
                        h4(class="modal-title") Delete Resident
                        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
                    div(class="modal-body")
                        p Are you sure you want to delete these Records?
                        p(class="text-warning")
                            small This action cannot be undone
                    div(class="modal-footer")
                        input(type="button" class="btn btn-default" data-dismiss="modal" value="Cancel")
                        input(type="submit" class="btn btn-danger" value="Delete")